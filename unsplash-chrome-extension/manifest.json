{
    "manifest_version": 3,
    "name": "Unsplashed",
    "version": "1.0",
    "description": "Search, Resize, Download any unsplash image from the web with ease.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}